<div class="tc-gallery js-gallery">
  <div class="tc-gallery__elem tc-gallery__elem--start js-gallery-elem">
    <div class="tc-gallery__elem--start__img" style="background-image: url('<%= @gallery['leadImage'].to_s.gsub(/\d+$/,'818') %>')"></div>

    <div class="tc-gallery__elem--start__text">
      <h1><%= @gallery['title'] %></h1>

      <p><%= @gallery['description'] %></p>
    </div>
  </div>

  <% @gallery['slides'].each do |slide| %>
  <% if slide['type'] == 'image' %>
  <div class="tc-gallery__elem js-gallery-elem">
    <img src="" class="js-gallery-img" data-img="<%= slide['image'].to_s.gsub(/\d+$/,'724') %>">

    <div class="tc-gallery__elem__data js-gallery-data">
      <h2><%= slide['title'] %></h2>

      <div class="tc-gallery__elem__data__wrap js-gallery-text">
        <div class="tc-gallery__elem__data__wrap__text">
          <%= slide['description_html'].to_s.html_safe %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
